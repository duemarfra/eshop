<%= form_with(model: @user) do |form| %>

    <% @user.errors.full_messages.each do |error| %>
        <div>
            <%= error %>
        </div>
    <% end %>

  <div>
    <%= form.label :email %>
    <%= form.email_field :email %>
  </div>

  <div>
    <%= form.label :username %>
    <%= form.text_field :username %>
  </div>

  <div>
    <%= form.label :password %>
    <%= form.password_field :password %>
  </div>

    <div>
    <%= form.label :admin %>
    <%= form.select :admin, ["true", "false"] %>
  </div>

      <div>
    <%= form.label :business %>
    <%= form.select :business, ["true", "false"] %>

  </div>

      <div>
    <%= form.label :customer %>
    <%= form.select :customer, ["true", "false"] %>

  </div>
  

  <div>
    <%= form.submit %>
  </div>
<% end %>
