<%= form_with(model: category) do |form| %>

    <% @category.errors.full_messages.each do |error| %>
        <div>
            <%= error %>
        </div>
    <% end %>

<div class="sm:w-1/2 lg:w-1/4 justify-between items-center px-2" >
  <div class="flex flex-col" >
    <%= form.label :name %>
    <%= form.text_field :name, class:"rounded-2xl border-gray-200" %>
  </div>

  <button class="w-full bg-white text-gray-600 px-4 py-2 rounded-2xl drop-shadow-sm hover:bg-gray-300 my-2">
    <%= form.submit %>
  </button>
</div>
<% end %>
